{
  "name": "shopco-ecommerce",
  "version": "1.0.0",
  "private": true,
  "description": "Vanilla JS e-commerce with Node.js backend and JWT auth",
  "main": "electron-main.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "desktop": "electron .",
    "desktop-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "build-desktop": "electron-builder",
    "admin": "echo 'Admin interface available at: http://localhost:3000/E-commerce-website-main/e-commerce%20website/public/admin/index.html'"
  },
  "dependencies": {
    "bcryptjs": "2.4.3",
    "cors": "2.8.5",
    "express": "4.19.2",
    "jsonwebtoken": "9.0.2",
    "nanoid": "5.0.7"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "30.0.9",
    "electron-builder": "^24.13.3",
    "nodemon": "3.1.0",
    "wait-on": "^7.2.0"
  }
}
